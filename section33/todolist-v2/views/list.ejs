<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %>!</h1>
    </div>
    
    <div class="box">

        <% nextItem.forEach(item => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" value="<%= item._id %>" onchange="this.form.submit()" name="delete">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" value="<%= listTitle %>" name="title">
            </form>
            
        <% }) %>

        <form class="item" action="/" method="post">
            <input type="text" name="nextItem" placeholder="New Item" autocomplete="off" required>
            <button type="submit" name="button" value=<%= listTitle %>>+</button>
        </form>
    </div>
    
<%- include("footer") -%>

